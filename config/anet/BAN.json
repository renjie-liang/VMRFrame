{
  "task" : "anet",

  "paths": {
    "ckpt_dir": "./ckpt",
    "cache_dir" : "./data_pkl/",

    "feature_path": "/storage_fast/rjliang/activitynet/i3d",
    "glove_path": "/storage_fast/rjliang/glove/glove.840B.300d.txt",
    "train_path": "data/anet_gt/train.json",
    "test_path": "data/anet_gt/test.json",
    "val_path": ""
  },

  "train": {
    "epochs": 10,
    "batch_size": 32,
    "lr": 0.0001,
    "warmup_proportion": 0.01,
    "clip_norm": 1.0
  },

  "model": {
    "name": "BAN",
    "vlen": 64,
    "vdim": 1024,
    "dim": 256,
    "lstm_layer": 2,
    "query_embed_dim": 300,
    "fuse_dim": 512,
    "pooling_counts": [15, 8, 8],
    "sparse_sample": true,
    "contrast_dim": 128,

    "droprate": 0.1,

    "topk": 20,
    "neighbor": 3,
    "negative": 0,
    "prop_num": 80
  },
  "gcn":
  {
    "num_blocks": 2,
    "k": 80,
    "hidden_size": 512
  },

  "loss":
  {
    "NAME" : "bce_loss",
    "min_iou": 0.5,
    "max_iou": 1.0,
    "hidden_size": 512,
    "bce": 2.0,
    "td": 0.1,
    "refine": 3.0,
    "contrast": 0.1,
    "offset": 3.0
  }
}
